<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:background="#fdb480">

    <TextView
        android:id="@+id/nnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 정보"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"/> <!-- dp에서 sp로 변경 -->

    <TextView
        android:id="@+id/displayIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디 : "
        android:textSize="25sp"/> <!-- dp에서 sp로 변경 -->

    <TextView
        android:id="@+id/displayPasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 : "
        android:textSize="25sp"/> <!-- dp에서 sp로 변경 -->

    <TextView
        android:id="@+id/loginSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 인증 중"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"/> <!-- dp에서 sp로 변경 -->

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증시도버튼"
        />
</LinearLayout>
