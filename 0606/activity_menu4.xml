<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="28dp">

            <android.widget.ImageButton
                android:id="@+id/btn_back"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circular_button"
                android:src="@android:drawable/ic_menu_revert"
                android:layout_marginEnd="16dp"
                android:padding="0dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vocal Pitch Analyzer"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <View
                android:layout_width="52dp"
                android:layout_height="52dp" />
        </LinearLayout>

        <!-- 녹음 상태 표시 (개선된 디자인) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/status_card_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <View
                android:id="@+id/recording_indicator_dot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/recording_dot"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_recording_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="녹음 준비"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:alpha="0.95" />

        </LinearLayout>

        <!-- 현재 피치 디스플레이 (강화된 디자인) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="18dp"
            android:elevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 피치"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_current_pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 Hz"
                android:textSize="36sp"
                android:textColor="#e74c3c"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="#e74c3c"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음표"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_current_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="28sp"
                android:textColor="#3498db"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </LinearLayout>

        <!-- 주파수 미터 (개선된 디자인) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="18dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주파수 미터"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pitch_meter"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="12dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressTint="#e74c3c"
                android:progressBackgroundTint="#ecf0f1" />

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Hz"
                android:textSize="18sp"
                android:textColor="#2c3e50"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 피치 시각화 바 (범위 수정 및 디자인 개선) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="18dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피치 범위 시각화"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(50Hz - 2000Hz)"
                android:textSize="12sp"
                android:textColor="#95a5a6"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <View
                    android:id="@+id/pitch_bar"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pitch_bar_background"
                    android:elevation="2dp" />

                <ImageView
                    android:id="@+id/pitch_indicator"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/keki"
                    android:background="@drawable/rounded_background"
                    android:clipToOutline="true"
                    android:elevation="6dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50Hz\n(저음)"
                    android:textSize="10sp"
                    android:textColor="#7f8c8d"
                    android:alpha="0.9"
                    android:gravity="start"
                    android:lineSpacingExtra="1dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1000Hz\n(중음)"
                    android:textSize="10sp"
                    android:textColor="#7f8c8d"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2000Hz\n(고음)"
                    android:textSize="10sp"
                    android:textColor="#7f8c8d"
                    android:alpha="0.9"
                    android:gravity="end"
                    android:lineSpacingExtra="1dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 통계 정보 (강화된 디자인) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 통계"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="평균 피치:"
                    android:textSize="14sp"
                    android:textColor="#34495e"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_average_pitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 Hz"
                    android:textSize="14sp"
                    android:textColor="#e74c3c"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="피치 범위:"
                    android:textSize="14sp"
                    android:textColor="#34495e"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pitch_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 Hz"
                    android:textSize="14sp"
                    android:textColor="#3498db"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- 통합 컨트롤 버튼 (강화된 디자인) -->
        <android.widget.Button
            android:id="@+id/btn_toggle_recording"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="🎤 시작"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/primary_button_style"
            android:elevation="12dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="20dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <!-- 도움말 및 안내 텍스트 (개선된 디자인) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/help_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 사용 방법"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:alpha="0.95" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 마이크를 향해 노래하거나 말해보세요\n• 실시간으로 피치와 음표를 확인할 수 있습니다\n• 캐릭터가 피치에 따라 변화합니다"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- 추가 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최적의 결과를 위해 조용한 환경에서 사용하세요"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:fontStyle="italic" />

    </LinearLayout>
</ScrollView>